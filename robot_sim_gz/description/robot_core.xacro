<?xml version="1.0"?>
<robot  xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="inartial_macros.xacro"/>

<material name="white">
    <color rgba="1 1 1 1" />
</material>

<material name="red">
    <color rgba="1 0 0 1" />
</material>



<material name="black">
    <color rgba="0 0 0 1" />
</material>


<!-- BASE_LINK -->
<link name="base_link">
</link>

<!-- BASE FOOTPRINT LINK -->

<joint name="base_foortprint_joint" type="fixed" >
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>

<link name="base_footprint">
</link>


 <!-- MAIN_CORE_LINK -->
<joint name="base_joint" type="fixed">
    <parent link="base_link" />
    <child  link="core" />
    <origin xyz="-0.1 0 0"/>
</joint>

<link name="core">
    <visual>
        <geometry> 
            <box size="0.3 0.3 0.15" /> 
        </geometry>
        <material name="red" />
        <origin xyz="0.15 0 0.075" />
    </visual>

    <collision>
        <geometry> 
            <box size="0.3 0.3 0.15" /> 
        </geometry>
        <origin xyz="0.15 0 0.075" />
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">    
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>

<!-- FIXING UP THE COLORS IN GAZEBO -->

<gazebo reference="core">
    <material> Gazebo/Red </material>
</gazebo>

<!-- LEFT_WHEEL_LINK -->
<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.05 0.175 0" rpy="-${pi/2} 0 0" />
    <axis xyz="0 0 1" />
</joint>

<link name="left_wheel">
    <visual>
    <geometry>
        <cylinder radius="0.05" length="0.04"/>

    </geometry>
    <material name="white"/>
    
    </visual>

    <collision>
        <geometry>
        <cylinder radius="0.05" length="0.04"/>

    </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.4" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="left_wheel">
    <material> Gazebo/White </material>
</gazebo>

<!-- RIGHT_WHEEL_LINK -->

<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.05 -0.175 0" rpy="${pi/2} 0 0" />
    <axis xyz="0 0 -1" />
</joint>

<link name="right_wheel">
    <visual>
    <geometry>
        <cylinder radius="0.05" length="0.04"/>

    </geometry>
    <material name="white"/>
    
    </visual>

    <collision>
        <geometry>
            <cylinder radius="0.05" length="0.04"/>

        </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.1" length="0.4" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

</link>

<gazebo reference="right_wheel">
    <material> Gazebo/White </material>
</gazebo>


<!-- CASTER_WHEEL_LINK  -->

<joint name="caster_wheel_joint" type="fixed">
    <parent link="core"/>
    <child link="caster_wheel_link" />
    <origin xyz="0.25 0 0" />

</joint>

<link name="caster_wheel_link"> 
    <visual>
        <geometry>
            <sphere radius="0.05" />
        </geometry>
        <origin xyz="0 0 0" />
        <material name="white"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.05" />
        </geometry>
        <origin xyz="0 0 0" />
    </collision>
    <xacro:inertial_sphere mass="0.1" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
</link>

<gazebo reference="caster_wheel_link">
    <material> Gazebo/White </material>
    <mu1 value="0.0015"/>
    <mu2 value="0.0015"/>
</gazebo>



<!-- CASTER WHELL 2 -->

<joint name="caster_wheel_joint2" type="fixed">
    <parent link="core"/>
    <child link="caster_wheel_link2" />
    <origin xyz="0.06 0 0" />

</joint>

<link name="caster_wheel_link2"> 
    <visual>
        <geometry>
            <sphere radius="0.05" />
        </geometry>
        <origin xyz="0 0 0" />
        <material name="white"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.05" />
        </geometry>
        <origin xyz="0 0 0" />
    </collision>
    <xacro:inertial_sphere mass="0.1" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
</link>

<gazebo reference="caster_wheel_link2">
    <material> Gazebo/White </material>
    <mu1 value="0.0015"/>
    <mu2 value="0.0015"/>
</gazebo>

</robot>